{
  "expo": {
    "name": "HMG Demo",
    "slug": "hmg-pruebatecnica",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "hmgpruebatecnica",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.hmg.demo",
      "infoPlist": {
        "NSBluetoothAlwaysUsageDescription": "Esta aplicación necesita acceso a Bluetooth para buscar y conectarse con dispositivos cercanos.",
        "NSBluetoothPeripheralUsageDescription": "Esta aplicación necesita acceso a Bluetooth para buscar y conectarse con dispositivos cercanos.",
        "NSLocationWhenInUseUsageDescription": "Esta aplicación necesita acceso a la ubicación para escanear dispositivos Bluetooth cercanos."
      }
    },
    "android": {
      "package": "com.hmg.demo",
      "adaptiveIcon": {
        "backgroundColor": "#2563eb",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.BLUETOOTH",
        "android.permission.BLUETOOTH_ADMIN",
        "android.permission.BLUETOOTH_CONNECT",
        "android.permission.BLUETOOTH_SCAN",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION"
      ]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#2563eb"
        }
      ],
      [
        "react-native-ble-plx",
        {
          "isBackgroundEnabled": false,
          "modes": ["peripheral", "central"],
          "bluetoothAlwaysPermission": "Esta aplicación necesita Bluetooth para buscar dispositivos cercanos."
        }
      ],
      [
        "expo-sqlite",
        {
          "enableFTS": false
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
